{
  "name": "project-ontology",
  "version": "1.0.0",
  "private": true,
  "description": "API-driven project management dashboard for the Domusgpt ecosystem",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w packages/backend",
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev:doppler": "doppler run -- npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build -w packages/backend",
    "build:frontend": "npm run build -w packages/frontend",
    "mcp": "npm run start:stdio -w packages/mcp-server",
    "mcp:doppler": "doppler run -- npm run mcp",
    "secrets:setup": "./scripts/doppler-setup.sh",
    "secrets:import": "./scripts/doppler-import.sh",
    "secrets:list": "doppler secrets --project tunadex --config dev"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  }
}
